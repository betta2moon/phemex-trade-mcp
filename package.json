{
  "name": "phemex-trade-mcp",
  "version": "1.1.2",
  "main": "index.js",
  "type": "module",
  "bin": {
    "phemex-trade-mcp": "./dist/index.js",
    "phemex-cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');const s='#!/usr/bin/env node\\n';['dist/index.js','dist/cli.js'].forEach(f=>{const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!'))fs.writeFileSync(f,s+c)})\"",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "phemex",
    "trading",
    "futures",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "description": "MCP server for trading on Phemex â€” USDT-M futures, Coin-M futures, and Spot markets",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "dotenv": "^17.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
